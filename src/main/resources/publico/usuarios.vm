#parse("publico/header.vm")

<div class="container mt-3">
    <div class="card">
        <div class="card-header">
            <h4 class="font-weight-normal text-center">Lista de Usuarios</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Usuario</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Modificar Credenciales</th>
                        <th scope="col">Eliminaci√≥n Usuarios</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($usuarioAct in $usuarios)
                        <tr>
                            <td>$usuarioAct.usuario</td>
                            <td>$usuarioAct.nombre</td>
                            <td>$usuarioAct.rol</td>
                            #if($usuarioAct.rol != "ROLE_ADMIN")
                                <td>
                                    <form action="/ascender/$usuarioAct.idUsuario" method="post">
                                        <button class="btn btn-warning btn-sm" type="submit">Ascender Rol</button>
                                    </form>
                                </td>
                            #else
                                <td></td>
                            #end
                            #if($usuario.usuario=="admin" && $usuarioAct.usuario != $usuario.usuario)
                                #if($usuarioAct.rol == "ROLE_ADMIN")
                                    <td>
                                        <form action="/descender/$usuarioAct.idUsuario" method="post">
                                            <button class="btn btn-warning btn-sm" type="submit">Descender Rol</button>
                                        </form>
                                    </td>
                                #else
                                    <td></td>
                                #end
                                <td>
                                    <form action="/eliminar/$usuarioAct.idUsuario" method="post">
                                        <button class="btn btn-danger btn-sm" type="submit">Eliminar usuario</button>
                                    </form>
                                </td>
                            #else
                                #if($usuarioAct.rol != "ROLE_ADMIN")
                                    <td>
                                        <form action="/eliminar/$usuarioAct.idUsuario" method="post">
                                            <button class="btn btn-danger btn-sm" type="submit">Eliminar usuario</button>
                                        </form>
                                    </td>
                                #else
                                    <td></td>
                                #end
                            #end
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
#parse("publico/footer.vm")
